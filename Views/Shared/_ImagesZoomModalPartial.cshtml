@model string[];

<div class="modal fade" id="imageModal" tabindex="1" role="dialog" aria-labelledby="imageModalTitle" aria-hidden="true">
    <div class="modal-dialog W-100 modal-dialog-centered" role="document">
        <div class="modal-content bg-none">
            <div class="modal-header bg-none">
                <button type="button" class="btn btn-larg btn-close mb-3 me-4" data-bs-dismiss="modal" aria-label="Close">
                </button>
            </div>
            <div class="">
                <div id="carouselImages" data-bs-interval="false" class="carousel slide">
                    <div class="carousel-indicators">
                        @{int index = 0;}
                        @foreach (string picture in Model)
                        {
                            if (picture == Model[0])
                            {
                                <button type="button" data-bs-target="#carouselImages" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                                index++;
                            }
                            else
                            {
                                <button type="button" data-bs-target="#carouselImages" data-bs-slide-to="@index" aria-label="Slide 2"></button>
                                index++;
                            }
                        }
                    </div>
                    <div class="carousel-inner text-center">
                        @foreach(string picture in Model)
                        {
                            if(picture == Model[0])
                            {
                                <div class="carousel-item active">
                                    <img class="w-100 carousel-image rounded-2"
                                         src="/img/@picture" />
                                </div>
                            }
                            else
                            {
                                <div class="carousel-item">
                                    <img class="w-100 carousel-image rounded-2"
                                         src="/img/@picture" />
                                </div>
                            }
                        }
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselImages" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselImages" data-bs-slide="next">
                        <span class="carousel-control-next-icon  next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="col-10">

</div>