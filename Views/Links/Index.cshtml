@model _LinksIndexViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "_LayoutAdmin";
}
<script>
    var contentSelected = @Model.ContentSelected;
</script>
<h1>Gestion des resources</h1>
<div class="row align-items-center">
    <form id="form" method="get" class="row align-items-end mb-3">
        <input id="sortOrder" type="hidden" asp-for="Order" />
        <div class="col-2">
            <label asp-for="DataTypeSelected" class="form-label">Data Type</label>
            <select class="form-control" asp-for="DataTypeSelected" asp-items="Model.DataTypeList">
                <option value="">All</option>
            </select>
        </div>
        <div class="col-2">
            <label asp-for="StatusSelected" class="form-label">Status</label>
            <select class="form-control" asp-for="StatusSelected" asp-items="Model.StatusList">
                <option value="">All</option>
            </select>
        </div>
        <div class="col-2">
            <label asp-for="ExtSelected" class="form-label">Categorie</label>
            <select id="categorySelect" class="form-control" asp-items="Model.ExtensionList" asp-for="ExtSelected" onchange="GetContentList()">
                <option value="0">All</option>
            </select>
        </div>
        <div id="contentSelectDiv" class="col-2">
            <label asp-for="ContentSelected" class="form-label">Contenu</label>
            <select id="contentSelect" class="form-control" asp-for="ContentSelected">
                <option value="0">All</option>
            </select>
        </div>
        <div class="col-1 ">
            <input type="submit" value="Confirme" class="btn btn-primary" />
        </div>
    </form>
    <hr />
</div>
<p>
    <a class="btn btn-success" asp-action="Create">Ajouter +</a>
</p>
@if (Model.Resources.Count > 0)
{
    <table class="table table-striped table-sm">
        <thead>
            <tr class="text-white" style="background-color : rgba(80, 45, 97,1)">
                <th class="nav-item text-center">
                    @if (Model.Order.Equals("dataType"))
                    {
                        <a class="article text-decoration-none text-white "
                           onclick="SortLinks('dataType_desc')">
                           DataType ▲
                        </a>
                    }
                    else
                    {
                        <a class="article text-decoration-none text-white "
                           onclick="SortLinks('dataType')">
                            DataType ▼
                        </a>
                    }
                </th>
                <th class="nav-item text-center">
                    @if (Model.Order.Equals("label"))
                    {
                        <a class="article text-decoration-none text-white "
                           onclick="SortLinks('label_desc')">
                            Label ▲
                        </a>
                    }
                    else
                    {
                        <a class="article text-decoration-none text-white "
                           onclick="SortLinks('label')">
                            Label ▼
                        </a>
                    }
                </th>
                <th>
                    Picture
                </th>
                <th>
                    Url
                </th>
                <th>
                    Description
                </th>
                <th class="nav-item text-center">
                    @if (Model.Order.Equals("content"))
                    {
                        <a class="article text-decoration-none text-white "
                           onclick="SortLinks('content_desc')">
                            Contenu ▲
                        </a>
                    }
                    else
                    {
                        <a class="article text-decoration-none text-white "
                           onclick="SortLinks('content')">
                            Contenu ▼
                        </a>
                    }
                </th>
                <th class="nav-item text-center">
                    @if (Model.Order.Equals("status"))
                    {
                        <a class="article text-decoration-none text-white "
                           onclick="SortLinks('status_desc')">
                            Status ▲
                        </a>
                    }
                    else
                    {
                        <a class="article text-decoration-none text-white "
                           onclick="SortLinks('status')">
                            Status ▼
                        </a>
                    }
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Resources)
            {
                <tr>
                    <td class="">
                        @Html.DisplayFor(modelItem => item.DataType)
                    </td>
                    <td class="short-text">
                        @Html.DisplayFor(modelItem => item.Label)
                    </td>
                    <td class="short-text">
                        @Html.DisplayFor(modelItem => item.Picture)
                    </td>
                    <td class="short-text">
                        @Html.DisplayFor(modelItem => item.Url)
                    </td>
                    <td class="short-text">
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.Content)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-center">Aucun élément ne correspond à votre recherche</p>
}
<script src="~/js/LinksIndex.js" asp-append-version="true"></script>