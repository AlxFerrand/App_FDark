@model _ContentCatalogViewModel
@{
    ViewData["Title"] = ViewData["CategorySelect"];
}
<nav class="navbar navbar-expand navbar-light bg-white border-bottom box-shadow mb-3">
    <div class="container-fluid">
        <div class="justify-content-between">
            <ul class="navbar-nav flex-grow-1">
                @if(Model.ContentTypeSelected == 0)
                {
                    <li class="nav-item">
                        <a class="nav-link text-dark text-decoration-underline fw-bold" asp-area="" asp-controller="Home" asp-route-extId="@Model.ActualCatId" asp-route-contentTypeId="0" asp-action="ContentCatalog">All</a>
                    </li>
                }else{
                    <li class="nav-item">
                        <a class="nav-link text-dark fw-bold" asp-area="" asp-controller="Home" asp-route-extId="@Model.ActualCatId" asp-route-contentTypeId="0" asp-action="ContentCatalog">All</a>
                    </li>
                }
                @foreach (ContentType contentType in Model.ContentTypesList)
                {
                    if (Model.ContentTypeSelected == contentType.Id)
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark text-decoration-underline fw-bold" asp-area="" asp-controller="Home" asp-route-extId="@Model.ActualCatId" asp-route-contentTypeId="@contentType.Id" asp-action="ContentCatalog">@contentType.Name</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark fw-bold" asp-area="" asp-controller="Home" asp-route-extId="@Model.ActualCatId" asp-route-contentTypeId="@contentType.Id" asp-action="ContentCatalog">@contentType.Name</a>
                        </li>
                    }
                }
            </ul>
        </div>
    </div>
</nav>
<div class="row row-cols-1 row-cols-md-1 row-cols-lg-2 row-cols-xl-3 row-cols-xxl-4">
    @foreach (var c in Model.ContentsList)
    {
        <article class="col p-2">
            <!-- Déclaration du composant -->
            <div class="card-content bg-dark shadow rounded-3">
                <div class="border-bottom">
                    <div class="row justify-content-between align-items-start ">
                        <div class="col-9 ms-1">
                            <a class="text-decoration-none text-white" asp-controller="Home" asp-route-contentId="@c.Id" asp-action="LinksCatalog"><h4>@c.Name</h4></a>
                        </div>
                    </div>
                </div>
                <!-- Image située en haut -->
                <div class="card-img-container image-content">
                    <a asp-controller="Home" asp-route-contentId="@c.Id" asp-action="LinksCatalog">
                    <img class="card-image-content rounded-2"
                         src="/img/@c.Picture" />
                    </a>
                </div>
            </div>
        </article>
    }
</div>
